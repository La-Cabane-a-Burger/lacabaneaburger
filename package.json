{
  "name": "lacabaneaburger",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "lerna": "^3.22.1"
  },
  "scripts": {
    "nuke": "rm -r node_modules; for d in packages/*/node_modules; do echo $d; rm -rf $d; done",
    "clean": "lerna run clean && rm -rf node_modules",
    "dev": "lerna run dev --stream",
    "graphql:gen": "lerna run graphql:gen --scope '@lacabaneaburger/landing'",
    "dev:api": "yarn workspace @lacabaneaburger/api dev",
    "dev:web": "yarn workspace @lacabaneaburger/web dev",
    "dev:landing": "yarn workspace @lacabaneaburger/landing dev",
    "build:api": "yarn workspace @lacabaneaburger/api build",
    "build:landing": "yarn workspace @lacabaneaburger/landing build",
    "start:api": "yarn workspace @lacabaneaburger/api start",
    "migrate": "yarn workspace @lacabaneaburger/api migrate:deploy",
    "generate": "prisma generate --schema=./packages/api/prisma/schema.prisma",
    "fixtures:api": "yarn workspace @lacabaneaburger/api fixtures",
    "build:web": "yarn workspace @lacabaneaburger/web build",
    "start:web": "yarn workspace @lacabaneaburger/web start",
    "start:landing": "yarn workspace @lacabaneaburger/landing start",
    "test": "lerna run test",
    "release": "lerna version --conventional-commits",
    "hotfix": "lerna version patch --conventional-commits",
    "diff": "lerna diff"
  },
  "dependencies": {
    "node": "^14.16.0",
    "nvm": "0.0.4",
    "ts-node": "9.1.1",
    "typescript": "4.1.3",
    "prisma": "^4.0.0",
    "@getbigger-io/prisma-fixtures-cli": "^2.0.1"
  },
  "engines": {
    "node": "^14.18.0"
  }
}
